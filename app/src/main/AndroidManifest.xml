<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZhiXue"
        tools:targetApi="31">
        <activity
            android:name=".AdvancedLoginActivity"
            android:exported="true"
            android:label="@string/title_activity_advanced_login"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />
        <activity
            android:name=".PwdActivity"
            android:exported="true"
            android:label="@string/title_activity_pwd"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity
            android:name=".PaperActivity"
            android:exported="true"
            android:label="@string/title_activity_paper"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity
            android:name=".ExamActivity"
            android:exported="true"
            android:label="@string/title_activity_exam"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ZhiXue"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>